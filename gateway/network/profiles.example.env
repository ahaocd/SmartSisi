# Canonical single endpoint policy (strict main path only)
SISI_WS_CANONICAL=wss://gw.example.com/device
SISI_CONTROL_WS_CANONICAL=wss://gw.example.com/control
SISI_GATEWAY_PUBLIC_HOST=gw.example.com
SISI_GATEWAY_PUBLIC_PORT=443

# Bridge ports
SISI_DEVICE_WS_PORT=9002
SISI_DEVICE_TCP_PORT=9001
SISI_DEVICE_TCP_TARGET_PORT=10001

# Control/media lane targets
SISI_GATEWAY_MEDIA_PATH=/device
SISI_GATEWAY_CONTROL_PATH=/control
